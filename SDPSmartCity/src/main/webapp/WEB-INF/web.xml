<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         id="WebApp_ID" 
         version="3.1">

  <display-name>SDPSmartCity</display-name>

  <!-- Welcome file configuration -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- CityServlet -->
  <servlet>
    <servlet-name>CityServlet</servlet-name>
    <servlet-class>com.smartcity.controller.CityServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CityServlet</servlet-name>
    <url-pattern>/CityServlet</url-pattern>
  </servlet-mapping>
  
  <!-- CityInfoServlet -->
  <servlet>
    <servlet-name>CityInfoServlet</servlet-name>
    <servlet-class>com.smartcity.controller.CityInfoServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CityInfoServlet</servlet-name>
    <url-pattern>/CityInfoServlet</url-pattern>
  </servlet-mapping>
  
  <!-- SignupServlet -->
  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>com.smartcity.controller.SignupServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/SignupServlet</url-pattern>
  </servlet-mapping>
  
  <!-- UserLoginServlet -->
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>com.smartcity.controller.UserLoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/UserLoginServlet</url-pattern>
  </servlet-mapping>

  <!-- AdminController -->
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>com.smartcity.controller.AdminController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>/AdminController</url-pattern>
  </servlet-mapping>

  <!-- CityController -->
  <servlet>
    <servlet-name>CityController</servlet-name>
    <servlet-class>com.smartcity.controller.CityController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CityController</servlet-name>
    <url-pattern>/CityController</url-pattern>
  </servlet-mapping>
  
</web-app>
